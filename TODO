  build_alinux2:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
      with:
        submodules: recursive

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Build alinux2
      uses: docker/build-push-action@v2
      with:
        file: dockerfiles/Dockerfile.alinux2
        load: true
        tags: elkeid_driver/alinux2:latest

    - name: Extract alinux2
      id: extract-alinux2
      uses: shrink/actions-docker-extract@v1
      with:
        image: elkeid_driver/alinux2:latest
        path: /ko_output/.

    - name: Upload alinux2
      uses: actions/upload-artifact@v3
      with:
        path: ${{ steps.extract-alinux2.outputs.destination }}
        name: elkeid_driver_alinux2

  build_alinux3:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
      with:
        submodules: recursive

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Build alinux3
      uses: docker/build-push-action@v2
      with:
        file: dockerfiles/Dockerfile.alinux3
        load: true
        tags: elkeid_driver/alinux3:latest

    - name: Extract alinux3
      id: extract-alinux3
      uses: shrink/actions-docker-extract@v1
      with:
        image: elkeid_driver/alinux3:latest
        path: /ko_output/.

    - name: Upload alinux3
      uses: actions/upload-artifact@v3
      with:
        path: ${{ steps.extract-alinux3.outputs.destination }}
        name: elkeid_driver_alinux3

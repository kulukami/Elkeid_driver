RUN bash ./batch_compile.sh
RUN apt-get -y remove linux-headers-3.19.* || true

RUN apt-get -y install linux-headers-4.2.* || true
WORKDIR /elkeid_driver
RUN bash ./batch_compile.sh
RUN apt-get -y remove linux-headers-4.2.* || true

RUN apt-get -y install linux-headers-4.4.* || true
